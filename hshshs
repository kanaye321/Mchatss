from selenium import webdriver
from selenium.webdriver.common.by import By
from selenium.webdriver.common.keys import Keys
from selenium.webdriver.chrome.service import Service
from webdriver_manager.chrome import ChromeDriverManager
import time

# --- CONFIG ---
chat_url = "https://example.com/chatroom"   # replace with your actual chat link
# Adjust selector for your chat input box
chat_input_locator = (By.CSS_SELECTOR, "textarea.chat-input")  
message = "A"
# -------------

# Set up Chrome driver properly for Selenium 4.35
service = Service(ChromeDriverManager().install())
driver = webdriver.Chrome(service=service)

driver.get(chat_url)

# wait for page to load
time.sleep(5)

# Locate the chat input box
chatbox = driver.find_element(*chat_input_locator)
chatbox.click()
chatbox.send_keys(message)
chatbox.send_keys(Keys.ENTER)

print("Message sent.")
time.sleep(3)
driver.quit()
